{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/news",
        "function": "news"
      },
      {
        "source": "/dispatch",
        "function": "dispatch"
      },
      {
        "source": "/tweets",
        "function": "tweets"
      },
      {
        "source": "/newsByGeoHash",
        "function": "newsByGeoHash"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
