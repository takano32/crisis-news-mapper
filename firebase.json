{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/newsOfJapan",
        "function": "newsOfJapan"
      },
      {
        "source": "/dispatchOfJapan",
        "function": "dispatchOfJapan"
      },
      {
        "source": "/newsByGeoHash",
        "function": "newsByGeoHash"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
